{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "document": false
    },
    "extends": [
        "airbnb",
        "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"]}],
        "react/prefer-stateless-function": 0,
        "react/jsx-indent": [2, 4],
        "max-len": 0,
        "indent" : [2, 4, { "ignoredNodes": ["JSXElement *"] }],
        "linebreak-style": [2, "unix"],
        "quotes": [ 2, "single"],
        "semi": [ 2, "always" ]
    }
}
