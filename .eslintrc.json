{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "document": false
    },
    "extends": [
        "airbnb",
        "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "react/prefer-stateless-function": "off",
        "react/jsx-indent": [2, 4],
        "max-len": 0,
        "indent" : ["error", 4, { "ignoredNodes": ["JSXElement *"] }],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
